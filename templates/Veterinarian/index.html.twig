{% extends 'base.html.twig' %}

{% block title %} Veterinários {% endblock %}

{% block body %}
    {{ parent() }}
    <div class="background p-3">
        <div>
            <div class="d-flex justify-content-between align-items-center m-1">
                <div class="d-flex align-items-center">
                    <div class="fs-4 title"> <i class="fa-solid fa-staff-snake"></i> Veterinários </div>
                    <div class="count ms-2 mb-2">{{ contagem }}</div>
                </div>
                <a class="btn btn-outline-primary btn-sm" style="text-decoration:none" href="{{ path('veterinarian_create')}}">
                   Novo Veterinario
                </a>
            </div>
        </div>
        <div class="p-3 filter">
            <div class="py-1 text-muted h6"><i class="fa-solid fa-filter"></i> Filtrar por:</div>
            <form class="w-100" method="post">
                {{ form_widget(form._token) }}
                <div class="row">
                    <div class="col-sm-3">
                        {{ form_label(form.nome) }}
                        {{ form_widget(form.nome) }}
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary bnt-rounded btn-sm"> <i class="fa-solid fa-magnifying-glass"></i>
                        Buscar </button>
                    <a href="{{ path('veterinarians_index') }}" class="btn btn-outline-secondary btn-sm bnt-rounded ms-2"> <i class="fa-solid fa-eraser"></i>
                        Limpar</a>
                </div>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-striped mt-5">
                <thead>
                <tr>
                    <th>Nome do Veterinário</th>
                    <th>CRMV</th>
                    <th>Opções</th>
                </tr>
                </thead>
                <tbody>
                {% for form in pagination %}
                    <tr>
                        <td>{{ form.nome }}</td>
                        <td> {{ form.crmv }}</td>
                        <td class="text-right">
                            <a href="{{ path("veterinarian_edit", {veterinarian: form.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="{{ path("veterinarian_delete",{veterinarian: form.id}) }}"><i class="fa-solid fa-trash delete-btn" veterinario="{{ form.id }}"></i></a>
                            <div id="{{ form.id }}" class="modal" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirmação de Exclusão</h5>
                                        </div>
                                        <div class="modal-body">
                                            Tem certeza que deseja deletar o veterinário?
                                        </div>
                                        <div class="modal-footer">
                                            <a href="{{ path('veterinarians_index') }}" class="btn btn-outline-secondary">
                                                <i class="fa-solid fa-xmark"></i> Cancelar</a>
                                            <a href="{{ path('veterinarian_delete', {'veterinarian': form.id}) }}" class="btn btn-danger">
                                                <i class="fa-solid fa-trash"></i> Deletar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('.delete-btn').on('click', e => {
                e.preventDefault()
                console.log(e.target)
                const id = $(e.target).attr('veterinario')
                const modal = document.getElementById(id)
                $(modal).modal('show')
            })
        });
    </script>
{% endblock %}